{
  "npm": false,
  "git": {
    "push": false,
    "commitMessage": "[automated commit] Release v${version}",
    "tagAnnotation": "Release v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}"
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "package.json",
      "out": "package.json"
    }
  },
  "hooks": {
    "before:release": "git checkout -b release/${version}",
    "after:release": "git push -u origin release/${version}"
  }
}
